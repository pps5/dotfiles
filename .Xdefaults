Xft.dpi:       150
Xft.antialias: true
Xft.rgba:      rgb
Xft.hinting:   true
Xft.hintstyle: hintslight

!---------------------------
! urxvt
!---------------------------
urxvt.depth:          32
urxvt.geometry:       90x30
urxvt.fading:	      0
urxvt.internalBorder: 3
urxvt.linespace:      0

! extensions
urxvt.perl-ext: default,matcher,xim-onthespot,resize-font

! Fonts
urxvt.allow_bold:     false
urxvt.font: 	      xft:Ricty:antialias=true:size=11,\
                      xft:IPAexGothic:antialias=true:size=16
urxvt.letterSpace:    -1
urxvt.resize-font.smaller: C-Down
urxvt.resize-font.bigger: C-Up

! Scrollbar
urxvt.scrollStyle: rxvt
urxvt.scrollBar:   false

! Color
urxvt.foreground: rgba:ffff/ffff/ffff/ffff
urxvt.background: rgba:0000/0000/0000/aaaa

! Input method with inline
urxvt.inputMethod: fcitx
urxvt.preeditType: OnTheSpot

! Clickable URL
urxvt.url-launcher:   /usr/bin/xdg-open
urxvt.matcher.button: 1
